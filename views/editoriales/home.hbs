{{#if hasEditoriales}}
  <div class="container mt-4">
    <a href="/adminAdd/editoriales" class="btn btn-success mt-3">+ Nueva
      Editorial</a>
    <h1 class="text-center my-4">Editoriales</h1>
    <div class="row">
      {{#each Editoriales}}
        <div class="col-md-4 mb-4">
          <div class="card h-100 border-success shadow-sm">
            <div class="card-body">
              <h5 class="card-title text-center m-2">{{this.editorialName}}</h5>
              <p class="card-text text-center">
                <strong>Teléfono: </strong>{{this.telefono}}
                |
                <strong>País: </strong>{{this.pais}}
              </p>
              <p class="card-text mt-auto text-center">
                <small class="text-muted">Cantidad de libros:
                  {{this.cantidadLibros}}</small>
              </p>
              <div class="text-center mt-1">
                <a href="#" class="btn btn-outline-warning mx-2">Editar</a>
                <a href="#" class="btn btn-outline-danger mx-2">Eliminar</a>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>

{{else}}
  <div class="d-flex justify-content-center align-items-center vh-100">
    <div class="text-center">
      <h1>No se encontraron Editoriales.</h1>
      <a href="/adminAdd/editoriales" class="btn btn-success mt-3">+ Nuevo
        Editorial</a>
    </div>
  </div>
{{/if}}
