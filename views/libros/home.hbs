{{#if hasLibros}}
  <div class="container mt-4">
    <a href="/adminAdd/libros" class="btn btn-success mt-3">+ Nuevo Libro</a>
    <h1 class="text-center my-4">Libros</h1>
    <div class="row">
      {{#each Libros}}
        <div class="col-md-4 mb-4">
          <div class="card h-100 border-success shadow-sm">
            <img
              src="{{this.urlImg}}"
              class="card-img-top img-fluid"
              alt="Caratula del libro"
              style="height: 300px; object-fit: cover;"
            />
            <div class="card-body d-flex flex-column">
              <h5 class="card-title text-center">{{this.titlulo}}</h5>
              <p class="card-text text-center"><small class="text-muted">Año de
                  publicación:
                  {{this.anioPublic}}</small></p>
              <p class="card-text"><strong>Categoría:</strong>
                {{this.idCategoria}}</p>
              <p class="card-text"><strong>Autor:</strong> {{this.idAutor}}</p>
              <p class="card-text"><strong>Editorial:</strong> {{this.idEditorial}}</p>
              <div class="text-center mt-3 mt-auto">
                <a href="#" class="btn btn-outline-warning mx-2">Editar</a>
                <a href="#" class="btn btn-outline-danger mx-2">Eliminar</a>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>

{{else}}
  <div class="d-flex justify-content-center align-items-center vh-100">
    <div class="text-center">
      <h1>No se encontraron Libros.</h1>
      <a href="/adminAdd/libros" class="btn btn-success mt-3">+ Nuevo Libro</a>
    </div>
  </div>
{{/if}}
