<div class="container mt-4">
  <div class="card">
    <div class="card-body">
      <div class="row">
        <div class="col-md-4">
          <img src="{{Detalle.imgPath}}" class="img-fluid rounded" alt="Carátula del libro" style="max-height: 300px; width: auto;">
        </div>
        <div class="col-md-8">
          <h2 class="card-title">{{Detalle.titlulo}}</h2>
          <p class="card-text"><strong>Autor:</strong> {{Detalle.Autor}}</p>
          <p class="card-text"><strong>Editorial:</strong> {{Detalle.Editorial}}</p>
          <p class="card-text"><strong>Año de publicación:</strong> {{Detalle.anioPublic}}</p>
          <p class="card-text"><strong>Categoría:</strong> {{Detalle.Categoria}}</p>
          <p class="card-text"><strong>Descripción categoría:</strong> {{Categoria.descripcion}}</p>
          <a href="/" class="btn btn-secondary">Volver</a>
        </div>
      </div>
    </div>
  </div>
</div>
